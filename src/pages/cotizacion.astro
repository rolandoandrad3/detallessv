<script>
  document.addEventListener('DOMContentLoaded', () => {
    const form = document.getElementById('cotizacion-form') as HTMLFormElement;
    const btnWhatsApp = document.getElementById('btn-whatsapp') as HTMLButtonElement;
    const btnEmail = document.getElementById('btn-email') as HTMLButtonElement;

    // Funci贸n para obtener servicios seleccionados
    function getServiciosSeleccionados(): string[] {
      const checkboxes = form.querySelectorAll('input[name="servicios"]:checked') as NodeListOf<HTMLInputElement>;
      return Array.from(checkboxes).map(cb => cb.value);
    }

    // Funci贸n para validar el formulario
    function validarFormulario(): boolean {
      const tipoEvento = (form.querySelector('#tipo-evento') as HTMLSelectElement).value;
      const fechaEvento = (form.querySelector('#fecha-evento') as HTMLInputElement).value;
      const numPersonas = (form.querySelector('#num-personas') as HTMLInputElement).value;
      const servicios = getServiciosSeleccionados();
      const ubicacion = (form.querySelector('#ubicacion') as HTMLSelectElement).value;
      const nombre = (form.querySelector('#nombre') as HTMLInputElement).value;
      const telefono = (form.querySelector('#telefono') as HTMLInputElement).value;

      if (!tipoEvento || !fechaEvento || !numPersonas || servicios.length === 0 || !ubicacion || !nombre || !telefono) {
        alert('Por favor completa todos los campos obligatorios (*)');
        return false;
      }

      return true;
    }

    // Funci贸n para crear mensaje de WhatsApp
    function crearMensajeWhatsApp(): string {
      const tipoEvento = (form.querySelector('#tipo-evento') as HTMLSelectElement).selectedOptions[0].text;
      const fechaEvento = (form.querySelector('#fecha-evento') as HTMLInputElement).value;
      const numPersonas = (form.querySelector('#num-personas') as HTMLInputElement).value;
      const servicios = getServiciosSeleccionados().join(', ');
      const ubicacion = (form.querySelector('#ubicacion') as HTMLSelectElement).selectedOptions[0].text;
      const nombre = (form.querySelector('#nombre') as HTMLInputElement).value;
      const telefono = (form.querySelector('#telefono') as HTMLInputElement).value;
      const email = (form.querySelector('#email') as HTMLInputElement).value;
      const mensaje = (form.querySelector('#mensaje') as HTMLTextAreaElement).value;

      let mensajeWhatsApp = `Hola Detalles SV! 
Solicito una cotizaci贸n con los siguientes detalles:

 *INFORMACIN DEL EVENTO*
Tipo: ${tipoEvento}
Fecha: ${fechaEvento}
Personas: ${numPersonas}
Ubicaci贸n: ${ubicacion}

 *SERVICIOS NECESARIOS*
${servicios}

 *MIS DATOS*
Nombre: ${nombre}
Tel茅fono: ${telefono}`;

      if (email) {
        mensajeWhatsApp += `
Email: ${email}`;
      }

      if (mensaje) {
        mensajeWhatsApp += `

 *DETALLES ADICIONALES*
${mensaje}`;
      }

      mensajeWhatsApp += `

隆Gracias! `;

      return encodeURIComponent(mensajeWhatsApp);
    }

    // Handler para WhatsApp
    btnWhatsApp.addEventListener('click', (e) => {
      e.preventDefault();
      
      if (!validarFormulario()) return;

      const mensaje = crearMensajeWhatsApp();
      const numeroWhatsApp = '50375510057'; // CAMBIAR POR EL NMERO REAL
      const urlWhatsApp = `https://wa.me/${numeroWhatsApp}?text=${mensaje}`;
      
      window.open(urlWhatsApp, '_blank');
    });

    // Handler para Email (puedes implementar con un servicio como FormSubmit, EmailJS, etc.)
