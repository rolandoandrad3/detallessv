---
import Layout from '../layouts/Layout.astro'
import Welcome from '../components/Welcome.astro'
import Footer from '../components/Footer.astro'
import Cards from '../components/Cards.astro'
---

<Layout>
  <section>
    <Welcome />
  </section>

  <!-- SECCIÓN DE CARDS -->
  <section class="bg-gray-100 py-16">
    <div class="max-w-7xl mx-auto grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6 px-6">
      <Cards
        title="Alquiler Mobiliario"
        description="Información sobre nuestros servicios de alquiler de mobiliario."
        buttonText="Ver servicio"
      />

      <Cards
        title="Alquiler de Manteleria"
        description="Información sobre nuestros servicios de alquiler de mantelería."
        buttonText="Ver Servicio"
      />

      <Cards
        title="Servicio de Decoracion"
        description="Informacion nuestros servicios de decoración para eventos."
        buttonText="Ver Servicio"
      />

      <Cards
        title="Planeacion de Eventos"
        description="Información sobre nuestros servicios de planeación de eventos."
        buttonText="Ver Servicio"
      />
    </div>
  </section>
  <section class="mx-8 my-8 leading-relaxed max-w-5xl mx-auto">
    <p>
      Lorem Ipsum is simply dummy text of the printing and typesetting industry...
    </p>
  </section>

  <Footer />
</Layout>
